
# Merges titlebar with contents
macos-titlebar-style = native
macos-titlebar-style = transparent

# Add some nice looking padding
window-padding-x = 5
window-padding-y = 5

# Don't hang around
quit-after-last-window-closed = true

# Fixes issues with Ctrl-R
term = xterm-256color

# The theme I liked the most from the `ghostty +list-themes`
theme = TokyoNight Storm

#font
font-size = 16

#Some global keybinds
keybind = ctrl+q=close_surface
#Window split
#keybind = ctrl+\=new_split:right
#keybind = ctrl+minus=new_split:down

# Window split Keybinding same like TMUX keymap
keybind = ctrl+a>\=new_split:right   
keybind = ctrl+a>minus=new_split:down

# Toggle zoom (maximize pane)
keybind = ctrl+a>m=toggle_split_zoom

# Double ctrl+a sends literal Ctrl-A to the running app if needed
keybind = ctrl+a>ctrl+a=text:\x01
